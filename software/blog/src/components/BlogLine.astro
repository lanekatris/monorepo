---
import FormattedDate from './FormattedDate.astro'

type Props = {
	post: {
		date?: Date
		title: string
		id: string
		draft: boolean
		url: string
	}
}

const { post } = Astro.props
---

<dt class="terminal-alert">
	<small>
		{post.date && <FormattedDate date={post.date} />}
	</small>
	<a href={post.url.split('/').filter(x=>x).at(-1)}>
		{post.title}
	</a>
</dt>
