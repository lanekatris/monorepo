{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Choose Event Type",
  "type": "object",
  "definitions": {
    "eventNamesNew": {
      "$comment": "This does NOT live on BaseEvent because we need default values for each type",
      "type": "string",
      "title": "EventNamesNew",
      "enum": [
        "personal-record-climbing-created",
        "maintenance-created",
        "adventure-created",
        "event-deleted"
      ]
    },
    "baseEvent": {
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "default": "default-id"
        },
        "date": {
          "type": "string",
          "format": "date",
          "title": "Date"
        }
      }
    }
  },
  "anyOf": [
    {
      "type": "object",
      "title": "Personal Record - Climbing Data",
      "allOf": [
        {
          "$ref": "#/definitions/baseEvent"
        },
        {
          "type": "object",
          "required": [
            "name",
            "eventName"
          ],
          "properties": {
            "name": {
              "type": "string",
              "title": "Name"
            },
            "eventName": {
              "$ref": "#/definitions/eventNamesNew",
              "default": "personal-record-climbing-created"
            }
          }
        }
      ]
    },
    {
      "type": "object",
      "title": "Maintenance Created Data",
      "allOf": [
        {
          "$ref": "#/definitions/baseEvent"
        },
        {
          "required": [
            "name",
            "equipment",
            "eventName"
          ],
          "properties": {
            "name": {
              "type": "string",
              "title": "Name"
            },
            "equipment": {
              "type": "string",
              "enum": [
                "truck",
                "house",
                "dads-house"
              ]
            },

            "eventName": {
              "$ref": "#/definitions/eventNamesNew",
              "default": "maintenance-created"
            }
          }
        }
      ]
    },
    {
      "type": "object",
      "title": "Adventure Created Data",
      "allOf": [
        {
          "$ref": "#/definitions/baseEvent"
        },
        {
          "required": [
            "name",
            "activities",
            "eventName"
          ],
          "properties": {
            "name": {
              "type": "string",
              "title": "Name"
            },
            "activities": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "enum": [
                  "backpacking",
                  "ball-golf",
                  "basketball",
                  "beach-pong",
                  "beer-pong",
                  "boat-tubing",
                  "bowling",
                  "camper-camping",
                  "camping",
                  "concert",
                  "cornhole",
                  "dh-mountain-biking",
                  "disc-golf",
                  "drinking-alcohol",
                  "escape-room",
                  "family-time",
                  "fishing",
                  "flag-football",
                  "fly-fishing",
                  "frisbee",
                  "hiking",
                  "horseshoes",
                  "hunting",
                  "indoor-bouldering",
                  "indoor-rope-climbing",
                  "indoor-trampoline-park",
                  "kayaking",
                  "life-event",
                  "maitenance",
                  "mountain-biking",
                  "movie-theatre",
                  "museum",
                  "outdoor-rock-climbing",
                  "overlanding",
                  "paintball",
                  "putt-putt-golf",
                  "road-biking",
                  "road-trip",
                  "snowboarding",
                  "softball",
                  "swimming",
                  "tennis",
                  "theme-park",
                  "volleyball",
                  "water-park",
                  "white-water-rafting"
                ]
              }
            },

            "eventName": {
              "$ref": "#/definitions/eventNamesNew",
              "default": "adventure-created"
            }
          }
        }
      ]
    },
    {
      "type": "object",
      "title": "Event Deleted Data",
      "allOf": [
        {
          "$ref": "#/definitions/baseEvent"
        },
        {
          "required": ["eventId", "eventName"],
          "properties": {
          "eventId": {
            "title": "Event ID",
            "type": "string"
          },
          "eventName": {
            "$ref": "#/definitions/eventNamesNew",
            "default": "event-deleted"
          }
          }
        }
      ]
    }
  ]
}
